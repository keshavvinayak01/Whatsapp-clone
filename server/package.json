{
  "name": "whatsapp-clone-server",
  "description": "A newly created Tortilla project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Urigo/WhatsApp-Clone-Server.git"
  },
  "private": true,
  "scripts": {
    "prestart": "yarn codegen",
    "start": "ts-node index.ts",
    "test": "TZ=\"Asia/Jerusalem\" jest --runInBand --forceExit",
    "codegen": "graphql-codegen",
    "format": "prettier \"**/*.ts\" --write"
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.6.1",
    "@graphql-codegen/typescript": "1.6.1",
    "@graphql-codegen/typescript-resolvers": "1.6.1",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.1",
    "@types/graphql": "14.5.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "jest": "24.9.0",
    "jest-junit": "8.0.0",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/pg": "^7.11.2",
    "apollo-link": "^1.2.13",
    "apollo-link-ws": "^1.0.19",
    "apollo-server-express": "2.14.2",
    "apollo-server-testing": "2.9.0",
    "apollo-utilities": "^1.3.2",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "14.5.3",
    "graphql-import": "0.7.1",
    "graphql-postgres-subscriptions": "^1.0.5",
    "graphql-scalars": "1.0.1",
    "graphql-tools": "4.0.5",
    "pg": "^7.12.1",
    "sql-template-strings": "^2.2.2",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
